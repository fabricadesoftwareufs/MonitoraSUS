@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-content">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title  text-muted mb-0">MonitoraSUS</h5>
                            <h5 class="h3 mb-0">Início</h5>
                        </div>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="row">
                        <div class="col-xl-2 col-md-4">
                            <div class="card card-stats ">

                                <div class="card-body card-round card-button  bg-gradient-primary">
                                    <div class="row">
                                        <div class="col-auto">
                                            <div class="icon icon-shape bg-translucent-white text-white rounded-circle shadow">
                                                <i class="fas fa-file-medical"></i>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <h5 class="card-title text-uppercase text-muted-white mb-0">Resultados <br> de Exame</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-2 col-md-4">
                            <div class="card card-stats ">
                                <div class="card-body card-round card-button bg-gradient-primary">
                                    <div class="row">
                                        <div class="col-auto">
                                            <div class="icon icon-shape bg-translucent-white text-white rounded-circle shadow">
                                                <i class="fas fa-clipboard-list "></i>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <h5 class="card-title text-uppercase text-muted-white mb-0">Histórico de <br>Resultados</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-2 col-md-4">
                            <div class="card card-stats ">
                                <div class="card-body card-round card-button bg-gradient-primary">
                                    <a href="@Url.Action("Create", "AgenteSecretario", new { userType = 1 })">
                                        <div class="row">
                                            <div class="col-auto">
                                                <div class="icon icon-shape bg-translucent-white text-white rounded-circle shadow">
                                                    <i class="fas fa-users-cog"></i>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <h5 class="card-title text-uppercase text-muted-white mb-0">Administração <br>do Sistema</h5>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>