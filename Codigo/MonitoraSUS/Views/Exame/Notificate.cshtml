@model Model.ViewModel.PesquisaExameViewModel
@using System.Security.Claims;
@using Model.ViewModel;
@using MonitoraSUS.Utils;



@{
    ViewData["Title"] = "Notificar";


    /*
     * Recuperando o agente logado
     * para filtrar quem ele pode remover
     */

    var agente = Methods.RetornLoggedUser((ClaimsIdentity)User.Identity);

}


<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-content">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">

                        <div class="col">
                            <h5 class="card-title text-muted mb-0">MonitoraSUS</h5>
                            <h5 class="h3 mb-0">Resultados</h5>
                        </div>
                        <div class="col text-right">
                            <!--a class="btn btn-success" asp-action="Create">Novo Exame</!--a-->
                            <a class="btn btn-default" asp-controller="Home" asp-action="Index"> <i class="fas fa-arrow-left"></i> Voltar</a><br />
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <h4 class="card-title text-muted mb-0">Filtre Exames por Data e CPF/RG</h4>
                    <div class="pl-lg-0">
                        <div class="row">
                            <div class="col">
                                <form asp-controller="Exame" asp-action="Notificate">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-cpf">CPF/RG ou NOME</label>
                                                <input asp-for="Pesquisa" type="text" name="pesquisa" class="form-control" placeholder="000.000.000-00" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-cpf">Cidade</label>
                                                <input asp-for="Cidade" type="text" name="cidade" class="form-control" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="form-control-label" for="data-inicial"> Data Inicial</label>
                                                <input asp-for="DataInicial" type="date" id="data-inicial" name="DataInicial" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="form-control-label" for="data-final"> Data Final</label>
                                                <input asp-for="DataFinal" type="date" id="data-final" name="DataFinal" class="form-control" />
                                            </div>
                                            <div class="form-group" hidden>
                                                <label class="form-control-label" for="data-final"> Data Final</label>
                                                <input asp-for="RealizouPesquisa" type="checkbox" checked="checked" id="realizou-pesquisa" class="form-control" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-atuacao-estado">Resultado</label>
                                                <select asp-for="Resultado" class="form-control" id="input-resultado">
                                                    <option>Todas as Opçoes</option>
                                                    <option>Positivo</option>
                                                    <option>Negativo</option>
                                                    <option>Indeterminado</option>
                                                    <option>Imunizado</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-0">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <button type="submit" id="btn-filtar" class="form-control btn btn-default"><i class="fa fa-search"></i> Filtrar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="col-md-4 text-center">
                                <div class="table-responsive">
                                    <table class="table align-items-center table-flush">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col" class="sort" data-sort="resultado">
                                                    Resultado
                                                </th>
                                                <th scope="col" class="sort" data-sort="total">
                                                    Total
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            <tr class="text-danger">
                                                <td>
                                                    Positivos
                                                </td>
                                                <td>
                                                    @Model.Positivos
                                                </td>
                                            </tr>

                                            <tr class="text-success">
                                                <td>
                                                    Negativos
                                                </td>
                                                <td>
                                                    @Model.Negativos
                                                </td>
                                            </tr>

                                            <tr class="text-warning">
                                                <td>
                                                    Indeterminados
                                                </td>
                                                <td>
                                                    @Model.Indeterminados
                                                </td>
                                            </tr>
                                            <tr class="text-blue">
                                                <td>
                                                    Imunizados
                                                </td>
                                                <td>
                                                    @Model.Imunizados
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 text-right">
                    @using (Html.BeginForm("NotificateByListAsync", "Exame", FormMethod.Post))
                    {
                        @for (int i = 0; i < Model.Exames.Count; i++)
                        {
                            <div class="form-group" hidden>
                                @Html.LabelFor(model => model.Exames[i].IdExame, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Exames[i].IdExame, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Exames[i].IdExame, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group" hidden>
                                @Html.LabelFor(model => model.Exames[i].IdPaciente.Idpessoa, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Exames[i].IdPaciente.Idpessoa, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Exames[i].IdPaciente.Idpessoa, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group" hidden>
                                @Html.LabelFor(model => model.Exames[i].Resultado, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Exames[i].Resultado, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Exames[i].Resultado, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group" hidden>
                                @Html.LabelFor(model => model.Exames[i].StatusNotificacao, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Exames[i].StatusNotificacao, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Exames[i].StatusNotificacao, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        }

                        <button type="submit" class="btn btn-info btn-xs"><i class="fa fa-envelope"></i> SMS Todos</button>
                    }
                </div>

                <div class="card-body ">
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="sort" data-sort="codigo-coleta">
                                        Id Coleta
                                    </th>
                                    <th scope="col" class="sort" data-sort="cpf">
                                        Cpf/Rg
                                    </th>
                                    <th scope="col" class="sort" data-sort="nome-paciente">
                                        Paciente
                                    </th>
                                    <th scope="col" class="sort" data-sort="cidade">
                                        Cidade
                                    </th>
                                    <th scope="col" class="sort" data-sort="estado">
                                        Estado
                                    </th>
                                    <th scope="col" class="sort" data-sort="data-exame">
                                        Data do Exame
                                    </th>
                                    <th scope="col" class="sort" data-sort="virus">
                                        Vírus
                                    </th>
                                    <th scope="col" class="sort" data-sort="resultado">
                                        Resultado
                                    </th>
                                    <th scope="col" class="sort" data-sort="foi-notificado">
                                        Foi Notificado
                                    </th>
                                    <th scope="col" class="sort" data-sort="acoes">
                                        Ações
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="list">
                                @foreach (var item in Model.Exames)
                                {
                                    <tr>
                                        <td>
                                            <div>@Html.DisplayFor(modelItem => item.CodigoColeta)</div>
                                        </td>
                                        <td>
                                            <a href="#">@Html.DisplayFor(modelItem => item.IdPaciente.Cpf)</a>
                                        </td>
                                        <td>
                                            @if (@item.IdPaciente.Nome.Length > 15)
                                            {
                                                <div>@item.IdPaciente.Nome.Substring(0, 15)...</div>
                                            }
                                            else
                                            {
                                                <div>@item.IdPaciente.Nome</div>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IdPaciente.Cidade.Length > 10)
                                            {
                                                <div>@item.IdPaciente.Cidade.Substring(0, 10)...</div>
                                            }
                                            else
                                            {
                                                <div>@item.IdPaciente.Cidade</div>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdPaciente.Estado)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataExame)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdVirusBacteria.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Resultado)
                                        </td>
                                        <td>
                                            @if (item.StatusNotificacao.ToUpper() == "S")
                                            {
                                                <p>Sim</p>
                                            }
                                            else if (item.StatusNotificacao.ToUpper() == "N")
                                            {
                                                <p>Nao</p>
                                            }
                                            else if (item.StatusNotificacao.ToUpper() == "E")
                                            {
                                                <p>Enviada</p>
                                            }
                                        </td>
                                        <td>
                                            @using (Html.BeginForm("NotificateById", "Exame", new { id = item.IdExame }, FormMethod.Post))
                                            {
                                                <button type="submit" class="btn btn-info btn-xs"><i class="fa fa-envelope"></i> SMS</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["mensagemSucesso"] != null)
{
    <div id="mensagem-retorno" onclick="swtAlert('success','Parabéns!', '@TempData["mensagemSucesso"]')"></div>
}
else if (TempData["mensagemErro"] != null)
{
    <div id="mensagem-retorno" onclick="swtAlert('error','Falha!', '@TempData["mensagemErro"]')"></div>
}





@section Scripts {

    <script>
        $(document).ready(function () {
            if (document.querySelector('#mensagem-retorno')) {
                swal.close();
                document.getElementById("mensagem-retorno").click();
                $('.btn btn-info btn-xs').prop("disabled", false);
            }

            $('.btn btn-info btn-xs').on('click', function () {
                $(this).prop("disabled", true);
                loading();
            });
        });
        function loading() {
            swal({
                title: 'Enviando SMS...'
            });
            swal.showLoading();
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="~/assets/js/sweet-alert.js"></script>
    <script src="~/assets/js/custom-exame.js"></script>
}
