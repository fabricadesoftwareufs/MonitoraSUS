                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-cpf">CPF</label>
                                        <input type="text" id="input-cpf" asp-for="Cpf" onfocus="loadEstados()" required class="form-control" placeholder="000.000.000-00">
