@model Model.PessoaModel
@using System.Collections.Generic

@{
    ViewData["Title"] = "Create";

    var typeCad = ViewBag.userType == 1 ? "Secretário" : "Agente";
    var caseController = typeCad == "Agente" ? "CreateAgent" : "CreateSec";
